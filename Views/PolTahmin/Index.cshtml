@{
    ViewData["Title"] = "Poliklinik Tahmini";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .pol-tahmin-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: calc(100vh - 100px);
        padding: 2rem 0;
    }
    
    .pol-tahmin-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        backdrop-filter: blur(10px);
        background: rgba(255,255,255,0.95);
    }
    
    .tahmin-sonuc-card {
        border-radius: 15px;
        border: 2px solid;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }
    
    .form-select-lg {
        border-radius: 10px;
        border: 2px solid #e9ecef;
        font-size: 1rem;
    }
    
    .form-select-lg:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-tahmin {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        border-radius: 25px;
        padding: 15px 40px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }
    
    .btn-tahmin:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 25px rgba(102, 126, 234, 0.4);
    }
    
    .icon-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    @@media (max-width: 768px) {
        .pol-tahmin-container {
            padding: 1rem 0;
        }
        
        .icon-circle {
            width: 80px;
            height: 80px;
        }
        
        .display-4 {
            font-size: 2rem;
        }
        
        .btn-tahmin {
            padding: 12px 30px;
            font-size: 1rem;
        }
    }
    
    @@media (max-width: 576px) {
        .col-md-4 {
            margin-bottom: 1rem;
        }
        
        .display-4 {
            font-size: 1.7rem;
        }
        
        .lead {
            font-size: 1rem;
        }
    }
</style>

<div class="pol-tahmin-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
                
                <!-- Header -->
                <div class="text-center text-white mb-5">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="fas fa-brain text-warning me-3"></i>
                        AI Destekli Poliklinik Tahmini
                    </h1>
                    <p class="lead mb-0">Belirtilerinizi seçin, yapay zeka hangi polikliniğe başvurmanız gerektiğini tahmin etsin</p>
                </div>

                <!-- Hata Mesajları -->
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ViewBag.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Tahmin Sonucu (Eğer varsa - En üstte göster) -->
                @if (ViewBag.TahminSonucu != null)
                {
                    var sonuc = ViewBag.TahminSonucu as hastane.Controllers.PolTahminController.TahminSonucu;
                    var cardClass = sonuc.Acil ? "border-danger" : "border-success";
                    var iconClass = sonuc.Acil ? "fas fa-exclamation-triangle text-danger" : "fas fa-check-circle text-success";
                    var bgClass = sonuc.Acil ? "bg-danger bg-opacity-10" : "bg-success bg-opacity-10";

                    <div class="tahmin-sonuc-card @cardClass @bgClass mb-4">
                        <div class="card-body p-4">
                            <div class="text-center mb-4">
                                <h4 class="fw-bold mb-0">
                                    <i class="@iconClass me-2"></i>
                                    Tahmin Sonucu
                                </h4>
                                @if (ViewBag.ModelKullanildi == true)
                                {
                                    <small class="badge bg-success">
                                        <i class="fas fa-robot me-1"></i>
                                        AI Model Kullanıldı
                                    </small>
                                }
                                else if (ViewBag.ModelKullanildi == false)
                                {
                                    <small class="badge bg-warning text-dark">
                                        <i class="fas fa-cogs me-1"></i>
                                        Kural Tabanlı Sistem
                                    </small>
                                }
                            </div>
                            
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-hospital me-2"></i>
                                        Önerilen Poliklinik: <strong>@sonuc.Poliklinik</strong>
                                    </h5>
                                    <p class="mb-3 fs-6">@sonuc.Mesaj</p>
                                    
                                    @if (sonuc.Acil)
                                    {
                                        <div class="alert alert-danger border-0 mb-0">
                                            <i class="fas fa-ambulance me-2"></i>
                                            <strong>ACİL DURUM:</strong> Hemen hastaneye başvurmanız önerilir!
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info border-0 mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Normal öncelikle polikliniğe başvurabilirsiniz.
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4 text-center">
                                    <div class="icon-circle bg-white">
                                        @if (sonuc.Acil)
                                        {
                                            <i class="fas fa-ambulance text-danger" style="font-size: 2.5rem;"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-user-md text-primary" style="font-size: 2.5rem;"></i>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <a href="@Url.Action("Randevu", "Appointment")" class="btn btn-success btn-lg px-4 rounded-pill me-3">
                                    <i class="fas fa-calendar-plus me-2"></i>
                                    Randevu Al
                                </a>
                                <button type="button" class="btn btn-outline-primary btn-lg px-4 rounded-pill" onclick="window.location.reload()">
                                    <i class="fas fa-redo me-2"></i>
                                    Yeniden Tahmin
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <!-- Ana Form Kartı -->
                <div class="pol-tahmin-card mb-4">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-clipboard-list me-2"></i>
                                Belirtilerinizi Seçin
                            </h5>
                            <p class="text-muted small mb-0">En az 1, en fazla 3 belirti seçebilirsiniz</p>
                        </div>

                        <form asp-action="Tahmin" method="post" id="tahminForm">
                            <div class="row g-3">
                                <!-- Belirti 1 -->
                                <div class="col-12 col-md-4">
                                    <label for="belirti1" class="form-label fw-semibold">
                                        <i class="fas fa-stethoscope text-danger me-1"></i>
                                        1. Belirti <span class="text-danger">*</span>
                                    </label>
                                    <select class="form-select form-select-lg" id="belirti1" name="belirti1" required>
                                        <option value="">Belirti seçin...</option>
                                        @if (ViewBag.Belirtiler != null)
                                        {
                                            @foreach (var belirti in ViewBag.Belirtiler)
                                            {
                                                <option value="@belirti">@belirti</option>
                                            }
                                        }
                                    </select>
                                </div>

                                <!-- Belirti 2 -->
                                <div class="col-12 col-md-4">
                                    <label for="belirti2" class="form-label fw-semibold">
                                        <i class="fas fa-stethoscope text-warning me-1"></i>
                                        2. Belirti
                                    </label>
                                    <select class="form-select form-select-lg" id="belirti2" name="belirti2">
                                        <option value="">Belirti seçin...</option>
                                        @if (ViewBag.Belirtiler != null)
                                        {
                                            @foreach (var belirti in ViewBag.Belirtiler)
                                            {
                                                <option value="@belirti">@belirti</option>
                                            }
                                        }
                                    </select>
                                </div>

                                <!-- Belirti 3 -->
                                <div class="col-12 col-md-4">
                                    <label for="belirti3" class="form-label fw-semibold">
                                        <i class="fas fa-stethoscope text-info me-1"></i>
                                        3. Belirti
                                    </label>
                                    <select class="form-select form-select-lg" id="belirti3" name="belirti3">
                                        <option value="">Belirti seçin...</option>
                                        @if (ViewBag.Belirtiler != null)
                                        {
                                            @foreach (var belirti in ViewBag.Belirtiler)
                                            {
                                                <option value="@belirti">@belirti</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <!-- Tahmin Butonu -->
                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-tahmin text-white" id="tahminBtn">
                                    <i class="fas fa-magic me-2"></i>
                                    <span class="btn-text">AI ile Poliklinik Tahmin Et</span>
                                    <span class="spinner-border spinner-border-sm ms-2 d-none" role="status"></span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Bilgilendirme Kartı -->
                <div class="pol-tahmin-card">
                    <div class="card-body p-4">
                        <h6 class="text-primary mb-3 text-center">
                            <i class="fas fa-info-circle me-2"></i>
                            Önemli Bilgiler
                        </h6>
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0 small text-muted">
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        Bu sistem yönlendirme amaçlıdır
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        Kesin teşhis için doktor muayenesi gereklidir
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled mb-0 small text-muted">
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        Acil durumlar için 112'yi arayın
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-check text-success me-2"></i>
                                        AI destekli tahmin sistemi
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('tahminForm').addEventListener('submit', function() {
            const btn = document.getElementById('tahminBtn');
            const btnText = btn.querySelector('.btn-text');
            const spinner = btn.querySelector('.spinner-border');
            
            btn.disabled = true;
            btnText.textContent = 'AI Tahmin Yapıyor...';
            spinner.classList.remove('d-none');
        });

        // Belirti seçiminde tekrarlama önleme
        function updateSelectOptions() {
            const selects = ['belirti1', 'belirti2', 'belirti3'];
            const selectedValues = selects.map(id => document.getElementById(id).value).filter(val => val);
            
            selects.forEach(selectId => {
                const select = document.getElementById(selectId);
                const currentValue = select.value;
                
                Array.from(select.options).forEach(option => {
                    if (option.value && selectedValues.includes(option.value) && option.value !== currentValue) {
                        option.style.display = 'none';
                    } else {
                        option.style.display = 'block';
                    }
                });
            });
        }

        // Select değişikliklerini dinle
        ['belirti1', 'belirti2', 'belirti3'].forEach(id => {
            document.getElementById(id).addEventListener('change', updateSelectOptions);
        });

        // Sayfa yüklendiğinde tahmin sonucuna scroll
        @if (ViewBag.TahminSonucu != null)
        {
            <text>
            window.addEventListener('load', function() {
                const tahminSonuc = document.querySelector('.tahmin-sonuc-card');
                if (tahminSonuc) {
                    tahminSonuc.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
            </text>
        }
    </script>
} 