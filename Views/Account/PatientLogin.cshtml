@model hastane.Models.LoginViewModel
@{
    ViewData["Title"] = "Hasta Girişi";
}

<section class="py-5 bg-light" style="margin-top: 80px;">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-12 text-center">
                <span class="subheading">HASTA GİRİŞİ</span>
                <h2 class="section-title text-center">Hasta Girişi</h2>
                <p class="text-muted col-lg-8 mx-auto">Hesabınıza giriş yaparak randevularınızı kolayca yönetin ve sağlık geçmişinizi takip edin.</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-5 mx-auto">
                <div class="appointment-form">
                    <form asp-action="PatientLogin" method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                <input asp-for="Email" class="form-control border-start-0" placeholder="ornek@mail.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-lock text-primary"></i>
                                </span>
                                <input asp-for="Password" class="form-control border-start-0" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                            <a href="#" class="text-primary">Şifremi Unuttum</a>
                        </div>
                        
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Bu sayfa şu an sadece gösterim amaçlıdır. Veritabanı henüz entegre edilmediği için giriş işlemi gerçekleşmeyecektir.
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                        </button>
                        
                        <div class="text-center mt-3">
                            <small class="text-muted">Hesabınız yok mu? <a href="/Account/Register" class="text-primary">Hemen Üye Olun</a></small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 