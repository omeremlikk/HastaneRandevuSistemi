@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const track = document.querySelector('.slider-track');
            const slides = document.querySelectorAll('.slider-slide');
            const nextButton = document.querySelector('.slider-next');
            const prevButton = document.querySelector('.slider-prev');
            const dots = document.querySelectorAll('.pagination-dot');
            const calendarSlide = document.querySelector('[data-slide-type="calendar-slide"]');
            
            let currentIndex = 0;
            const slideWidth = 100; // 100%
            const slidesCount = slides.length;
            
            // İlk yüklemede takvimi gizle (eğer aktif değilse)
            if (calendarSlide && !calendarSlide.classList.contains('active')) {
                const calendar = calendarSlide.querySelector('.modern-calendar');
                if (calendar) {
                    calendar.style.display = 'none';
                    calendar.style.opacity = '0';
                    calendar.style.visibility = 'hidden';
                }
            }
            
            // Sayfa yüklendiğinde ilk slaytı görünür yap
            updateSlider();
            
            // Slayt geçişini güncelle
            function updateSlider() {
                track.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
                
                // Aktif noktayı güncelle
                dots.forEach((dot, index) => {
                    if (index === currentIndex) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                });

                // Aktif slaytı güncelle (takvim çift görünümü için)
                slides.forEach((slide, index) => {
                    if (index === currentIndex) {
                        slide.classList.add('active');
                        
                        // Eğer bu takvim slaytı ise takvimi göster
                        if (slide.hasAttribute('data-slide-type') && 
                            slide.getAttribute('data-slide-type') === 'calendar-slide') {
                            const calendar = slide.querySelector('.modern-calendar');
                            if (calendar) {
                                calendar.style.display = 'block';
                                calendar.style.opacity = '1';
                                calendar.style.visibility = 'visible';
                            }
                        }
                    } else {
                        slide.classList.remove('active');
                        
                        // Eğer bu takvim slaytı ise takvimi gizle
                        if (slide.hasAttribute('data-slide-type') && 
                            slide.getAttribute('data-slide-type') === 'calendar-slide') {
                            const calendar = slide.querySelector('.modern-calendar');
                            if (calendar) {
                                calendar.style.display = 'none';
                                calendar.style.opacity = '0';
                                calendar.style.visibility = 'hidden';
                            }
                        }
                    }
                });
            }
            
            // Sonraki slayta geç
            function nextSlide() {
                if (currentIndex < slidesCount - 1) {
                    currentIndex++;
                } else {
                    currentIndex = 0; // Başa dön
                }
                updateSlider();
            }
            
            // Önceki slayta geç
            function prevSlide() {
                if (currentIndex > 0) {
                    currentIndex--;
                } else {
                    currentIndex = slidesCount - 1; // Sona git
                }
                updateSlider();
            }
            
            // Buton tıklamaları
            nextButton.addEventListener('click', nextSlide);
            prevButton.addEventListener('click', prevSlide);
            
            // Noktalara tıklama
            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    currentIndex = index;
                    updateSlider();
                });
            });
            
            // Dokunma olayları için (mobil cihazlar)
            let touchStartX = 0;
            let touchEndX = 0;
            
            const slider = document.querySelector('.slider-wrapper');
            
            slider.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            });
            
            slider.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            });
            
            function handleSwipe() {
                const swipeThreshold = 50; // Piksel
                
                if (touchEndX < touchStartX - swipeThreshold) {
                    // Sola kaydırma
                    nextSlide();
                } else if (touchEndX > touchStartX + swipeThreshold) {
                    // Sağa kaydırma
                    prevSlide();
                }
            }
            
            // Otomatik geçiş için zamanlayıcı
            const autoSlideInterval = setInterval(nextSlide, 6000); // 6 saniyede bir otomatik geçiş yap
            
            // Kullanıcı etkileşimde bulunduğunda otomatik geçişi durdur
            slider.addEventListener('mouseenter', () => {
                clearInterval(autoSlideInterval);
            });
            
            // Klavye ile gezinme
            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowLeft') {
                    prevSlide();
                } else if (e.key === 'ArrowRight') {
                    nextSlide();
                }
            });

            // Sayfa yüklendiğinde veya yeniden boyutlandığında takvim görünümü düzeltme
            window.addEventListener('resize', function() {
                updateSlider();
            });
        });
    </script>
}
