                        <!-- Doktor Görsel Bölümü -->
                        <div class="doctor-banner-container">
                            <div class="doctor-specialty-badge">
                                <i class="fas fa-stethoscope me-1"></i>@doctor.Specialty
                            </div>
                            <div class="doctor-image-wrapper">
                                <img src="@doctor.ImageUrl" class="doctor-profile-image" alt="@doctor.Name" onerror="this.src='/img/doctors/doctor1.jpg'">
                            </div>
                        </div>
                        <!-- Doktor Bilgileri -->
