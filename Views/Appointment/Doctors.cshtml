@model List<Doctor>
@{
    ViewData["Title"] = "Doktorlarımız";
}

<section class="doctors-header text-center py-5 bg-primary text-white">
    <div class="container mt-5">
        <h1 class="fw-bold">Uzman Doktorlarımız</h1>
        <p class="lead">Alanında tecrübeli uzman kadromuzla hizmetinizdeyiz</p>
    </div>
</section>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="doctors-filter mb-5 d-flex flex-column flex-md-row justify-content-md-between align-items-md-center">
                <div class="mb-3 mb-md-0">
                    <h5 class="fw-bold mb-0">Tüm Doktorlarımız</h5>
                    <p class="text-muted mb-0">Toplam @Model.Count doktor listeleniyor</p>
                </div>
                <div class="d-flex">
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="departmentFilter" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-filter me-2"></i>Bölüm
                        </button>
                        <ul class="dropdown-menu shadow-sm rounded-3" aria-labelledby="departmentFilter">
                            <li><a class="dropdown-item" href="#">Tümü</a></li>
                            <li><a class="dropdown-item" href="#">Kardiyoloji</a></li>
                            <li><a class="dropdown-item" href="#">Nöroloji</a></li>
                            <li><a class="dropdown-item" href="#">Ortopedi</a></li>
                            <li><a class="dropdown-item" href="#">Göz Hastalıkları</a></li>
                        </ul>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control rounded-start-pill" placeholder="Doktor ara...">
                        <button class="btn btn-primary rounded-end-pill" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var doctor in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="doctor-card border-0 rounded-4 shadow-sm h-100 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3 badge bg-primary-subtle text-primary">Uzman Hekim</div>
                    <div class="doctor-image-container position-relative">
                        <img src="@doctor.ImageUrl" class="doctor-image" alt="@doctor.Name" onerror="this.src='/img/placeholder-doctor.jpg'">
                        <div class="doctor-overlay d-flex align-items-center justify-content-center">
                            <div class="doctor-social d-flex gap-2">
                                <a href="#" class="btn btn-sm btn-light rounded-circle"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="btn btn-sm btn-light rounded-circle"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="btn btn-sm btn-light rounded-circle"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <span class="badge bg-primary-subtle text-primary rounded-pill mb-3 px-3 py-2">@doctor.Specialty</span>
                        <h4 class="card-title mb-3">@doctor.Name</h4>
                        <p class="card-text text-muted mb-4">@doctor.Description</p>
                        <div class="d-grid gap-2">
                            <a asp-action="Book" asp-route-doctorId="@doctor.Id" class="btn btn-primary rounded-pill">
                                <i class="fas fa-calendar-alt me-2"></i>Randevu Al
                            </a>
                            <a asp-action="DoctorDetails" asp-route-id="@doctor.Id" class="btn btn-outline-secondary rounded-pill">
                                <i class="fas fa-user-md me-2"></i>Profili Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>