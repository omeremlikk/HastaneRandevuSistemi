<!-- CSS ve JavaScript kodları burada kalacak -->
@section Scripts {
    <script>
        let currentDate = new Date();
        let selectedDoctorId = null;

        function showAppointmentModal(doctorId) {
            selectedDoctorId = doctorId;
            currentDate = new Date(); // Reset to today
            updateCalendar();
            $('#appointmentModal').modal('show');
        }

        function updateCalendar() {
            const calendarDays = $('#calendarDays');
            calendarDays.empty();
                    
            // Ay ve yıl gösterimi
            const monthYear = currentDate.toLocaleDateString('tr-TR', { 
                month: 'long', 
                year: 'numeric' 
            });
            $('#currentMonthYear').text(monthYear);

            // 7 günlük takvim oluştur
            for (let i = 0; i < 7; i++) {
                const date = new Date(currentDate);
                date.setDate(date.getDate() + i);

                const isWeekend = date.getDay() === 0 || date.getDay() === 6;
                const isPastDate = date < new Date().setHours(0,0,0,0);
                const isAvailable = !isWeekend && !isPastDate;

                const dayElement = $('<div>', {
                    class: `calendar-day ${!isAvailable ? 'disabled' : ''} ${isWeekend ? 'text-danger' : ''}`,
                    'data-date': date.toISOString().split('T')[0]
                }).html(`
                    <div class="day-name small">${date.toLocaleDateString('tr-TR', { weekday: 'long' })}</div>
                    <div class="day-number fw-bold">${date.getDate()}</div>
                    <div class="month-name small">${date.toLocaleDateString('tr-TR', { month: 'long' })}</div>
                    <div class="availability-badge small ${isAvailable ? 'text-success' : 'text-danger'}">
                        ${isAvailable ? '<i class="fas fa-check-circle"></i> Müsait' : '<i class="fas fa-times-circle"></i> Kapalı'}
                    </div>
                `);
                
                if (isAvailable) {
                    dayElement.click(function() {
                        $('.calendar-day').removeClass('active');
                        $(this).addClass('active');
                        window.location.href = `/Appointment/Book/${selectedDoctorId}?date=${$(this).data('date')}`;
                    });
                }

                calendarDays.append(dayElement);
            }
        }

        function previousWeek() {
            currentDate.setDate(currentDate.getDate() - 7);
            updateCalendar();
        }

        function nextWeek() {
            currentDate.setDate(currentDate.getDate() + 7);
            updateCalendar();
        }

        $(document).ready(function() {
            // Filtreleme fonksiyonu
            function filterDoctors() {
                const specialty = $("#specialtyFilter").val().toLowerCase();
                const searchText = $("#doctorSearch").val().toLowerCase();
                let foundAny = false;
                
                $(".col-md-6.col-lg-4.mb-4").each(function() {
                    const doctorSpecialty = $(this).find(".doctor-specialty-badge").text().toLowerCase();
                    const doctorName = $(this).find(".doctor-name").text().toLowerCase();
                    
                    const matchesSpecialty = specialty === "" || doctorSpecialty.includes(specialty);
                    const matchesSearch = searchText === "" || doctorName.includes(searchText);
                    
                    if (matchesSpecialty && matchesSearch) {
                        $(this).show();
                        foundAny = true;
                    } else {
                        $(this).hide();
                    }
                });
                
                // Sonuç bulunamadı mesajını göster/gizle
                if (foundAny) {
                    $("#noResultsMessage").addClass("d-none");
                } else {
                    $("#noResultsMessage").removeClass("d-none");
                }
            }
            
            // Filtreleme olayları
            $("#specialtyFilter").on("change", filterDoctors);
            $("#searchButton").on("click", filterDoctors);
            $("#doctorSearch").on("keyup", function(e) {
                if (e.key === "Enter") {
                    filterDoctors();
                }
            });
            
            // Filtreleri temizle
            $("#clearFilters").on("click", function() {
                $("#specialtyFilter").val("");
                $("#doctorSearch").val("");
                filterDoctors();
            });
        });
    </script>
}