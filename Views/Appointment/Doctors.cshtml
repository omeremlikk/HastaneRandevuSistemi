                                <a href="/Appointment/Book/@doctor.Id" class="btn btn-primary w-100">
                                    <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

