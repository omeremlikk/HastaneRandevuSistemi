@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log("DOM yüklendi, filtreleme kodu çalışıyor...");
            
            // AOS animasyonlarını devre dışı bırak - doktorların hepsi görünür olsun
            if (typeof AOS !== 'undefined') {
                // AOS özelliklerini sıfırla, animasyonları kaldır
                document.querySelectorAll('[data-aos]').forEach(element => {
                    // AOS'u kaldır ama orijinal sınıfları koru
                    element.classList.add('aos-animate');
                    // element.removeAttribute('data-aos');
                    // element.removeAttribute('data-aos-delay');
                });
                console.log("AOS animasyonları sıfırlandı, tüm elemanlar görünür yapıldı");
            }
            
            // DOM elemanlarını seç
            const departmentSelect = document.querySelector('.form-select');
            const searchInput = document.querySelector('.form-control');
            const searchButton = document.querySelector('.btn-primary');
            const doctorCards = document.querySelectorAll('.modern-card');
            const resultContainer = document.querySelector('.row.g-4');
            const resultText = document.querySelector('.text-muted.mb-0.small');
            
            console.log("Bulunan doktor sayısı:", doctorCards.length);
            
            if (!departmentSelect || !searchInput || !searchButton || !resultContainer) {
                console.error("Filtreleme için gerekli DOM elemanları bulunamadı!");
                return;
            }
            
            // Tüm doktor kartlarını sayfa yüklendiğinde görünür hale getir
            doctorCards.forEach(card => {
                const container = card.closest('.col-md-6');
                if (container) {
                    container.style.display = 'block';
                    container.classList.add('aos-animate');
                }
            });
            
            // Hızlı CSS stili ekleme
            const style = document.createElement('style');
            style.innerHTML = `
                .doctor-card-hidden {
                    opacity: 0;
                    transform: translateY(10px);
                    pointer-events: none;
                    display: none;
                }
                
                .doctor-card-visible {
                    opacity: 1;
                    transform: translateY(0);
                    transition: all 0.3s ease;
                }
                
                .highlight {
                    background-color: rgba(37, 99, 235, 0.15);
                    border-radius: 2px;
                    padding: 0 2px;
                }
                
                .no-results {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    text-align: center;
                    margin: 20px 0;
                    display: none;
                }
                
                /* Sayfa yüklenirken tüm doktorların görünür olmasını sağla */
                [data-aos] {
                    opacity: 1 !important;
                    transform: none !important;
                    visibility: visible !important;
                }
            `;
            document.head.appendChild(style);
            
            // Sonuç bulunamadı elemanını ekle
            const noResults = document.createElement('div');
            noResults.className = 'no-results col-12';
            noResults.innerHTML = `
                <div class="py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>Sonuç Bulunamadı</h4>
                    <p class="text-muted">Arama kriterlerinize uygun doktor bulunamadı.</p>
                    <button id="resetFilters" class="btn btn-outline-primary mt-2">
                        <i class="fas fa-redo me-2"></i>Filtreleri Sıfırla
                    </button>
                </div>
            `;
            resultContainer.appendChild(noResults);
            
            // Filtreleme işlevi
            function filterDoctors() {
                const searchTerm = searchInput.value.trim().toLowerCase();
                const department = departmentSelect.value;
                
                console.log("Filtreleme: Arama=", searchTerm, "Bölüm=", department);
                
                let visibleCount = 0;
                
                // Tüm doktor kartlarını kontrol et - AOS durumuna bakılmaksızın
                doctorCards.forEach(card => {
                    // Gerekli metinleri al
                    const name = card.querySelector('.doctor-name')?.textContent.toLowerCase() || "";
                    const specialty = card.querySelector('.doctor-specialty-badge')?.textContent.toLowerCase() || "";
                    const description = card.querySelector('.doctor-description')?.textContent.toLowerCase() || "";
                    
                    // Filtreleme kuralları uygula
                    let showBySearch = true;
                    let showByDepartment = true;
                    
                    // Arama filtresi
                    if (searchTerm) {
                        showBySearch = name.includes(searchTerm) || 
                                      specialty.includes(searchTerm) || 
                                      description.includes(searchTerm);
                    }
                    
                    // Bölüm filtresi
                    if (department !== "Tüm Bölümler") {
                        showByDepartment = specialty.includes(department.toLowerCase());
                    }
                    
                    // Kart konteynerini bul
                    const container = card.closest('.col-md-6');
                    
                    // Gösterme veya gizleme
                    if (showBySearch && showByDepartment) {
                        container.style.display = 'block';
                        visibleCount++;
                    } else {
                        container.style.display = 'none';
                    }
                });
                
                // Sonuç bulunamadı gösterimi
                noResults.style.display = visibleCount === 0 ? 'block' : 'none';
                
                // Sonuç sayısını göster
                if (resultText) {
                    resultText.textContent = `Toplam ${visibleCount}/${doctorCards.length} uzman doktor gösteriliyor`;
                }
                
                console.log("Filtreleme sonucu:", visibleCount, "doktor gösteriliyor");
            }
            
            // Filtreleri sıfırla
            function resetFilters() {
                searchInput.value = '';
                departmentSelect.selectedIndex = 0;
                
                doctorCards.forEach(card => {
                    const container = card.closest('.col-md-6');
                    container.style.display = 'block';
                });
                
                noResults.style.display = 'none';
                
                if (resultText) {
                    resultText.textContent = `Toplam ${doctorCards.length}/${doctorCards.length} uzman doktor gösteriliyor`;
                }
                
                console.log("Filtreler sıfırlandı");
            }
            
            // Olay dinleyicileri ekle
            searchButton.addEventListener('click', function(e) {
                e.preventDefault();
                filterDoctors();
            });
            
            searchInput.addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    filterDoctors();
                }
            });
            
            departmentSelect.addEventListener('change', filterDoctors);
            
            document.getElementById('resetFilters').addEventListener('click', resetFilters);
            
            // Sayfa yüklendiğinde sonuç sayısını göster
            if (resultText) {
                resultText.textContent = `Toplam ${doctorCards.length}/${doctorCards.length} uzman doktor gösteriliyor`;
            }
            
            console.log("Filtreleme kodu hazır");
        });
    </script>
