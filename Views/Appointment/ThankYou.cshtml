@{
    ViewData["Title"] = "Randevu Başarıyla Oluşturuldu";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div class="d-inline-flex justify-content-center align-items-center bg-success bg-opacity-10 rounded-circle mb-3"
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-check-circle text-success fa-4x"></i>
                        </div>
                        <div class="alert alert-success">
                            <h4><i class="fas fa-check-circle me-2"></i>Randevunuz Başarıyla Oluşturuldu!</h4>
                            <p class="mb-0">Randevu detaylarınız e-posta adresinize gönderilmiştir.</p>
                        </div>
                    </div>
                    
                    <a href="/" class="btn btn-outline-primary">
                        <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // ThankYou sayfasından geri döndüğünde randevu sayfasını yenilemek için
    sessionStorage.setItem('refreshNeeded', 'true');
    
    // Randevu sayfasına 3 saniye sonra otomatik yönlendir
    setTimeout(() => {
        // Randevu sayfasına otomatik dön
        window.location.href = "/Appointment/Randevu";
    }, 3000);
</script>