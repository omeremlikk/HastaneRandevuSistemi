@model List<Doctor>
@{
    ViewData["Title"] = "Randevu Takvimi";
}

<!-- Hero Section -->
<section class="schedule-hero position-relative overflow-hidden" style="background: linear-gradient(135deg, #f5f9ff 0%, #ecf5ff 100%); min-height: 60vh; display: flex; align-items: center; padding-top: 80px; overflow: hidden;">
