@using System.Linq
@{
    ViewData["Title"] = "Randevularım";
    var patientId = Context.Session.GetInt32("PatientId");
    var patientName = Context.Session.GetString("PatientName");
}

<div class="container mt-5 pt-5" style="min-height: 100vh; margin-bottom: 100px;">
    <!-- Debug bilgileri -->
    <div class="alert alert-info">
        <p><strong>Debug Bilgileri:</strong></p>
        <p>PatientId: @patientId</p>
        <p>PatientName: @patientName</p>
        <p>Model null mu?: @(Model == null ? "Evet" : "Hayır")</p>
        @if (Model != null)
        {
            <p>Yaklaşan Randevu Sayısı: @(Model.UpcomingAppointments?.Count ?? 0)</p>
            <p>Geçmiş Randevu Sayısı: @(Model.PastAppointments?.Count ?? 0)</p>
        }
        
        @if (ViewBag.DebugInfo != null)
        {
            <hr />
            <p><strong>Ek Debug Bilgileri:</strong></p>
            <ul>
                @foreach (var item in ViewBag.DebugInfo)
                {
                    <li><strong>@item.Key:</strong> @item.Value</li>
                }
            </ul>
        }
    </div>
    
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Randevularım</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="section-title mb-0">Randevularım</h2>
                
                @if (ViewBag.ProfileImage != null)
                {
                    <div class="d-flex align-items-center">
                        <img src="@ViewBag.ProfileImage" alt="Profil Fotoğrafı" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                        <span class="ms-2 fw-bold">@patientName</span>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.2rem;">
                            @if (!string.IsNullOrEmpty(patientName))
                            {
                                @patientName[0]
                            }
                            else
                            {
                                <i class="fas fa-user"></i>
                            }
                        </div>
                        <span class="ms-2 fw-bold">@patientName</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Ana Navigasyon -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-pills nav-fill bg-white rounded shadow-sm p-1">
                <li class="nav-item">
                    <a class="nav-link active" href="/Appointment/MyAppointments">
                        <i class="fas fa-calendar-check me-1"></i> Randevularım
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Profile">
                        <i class="fas fa-user-circle me-1"></i> Profil Bilgileri
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/ChangePassword">
                        <i class="fas fa-lock me-1"></i> Şifre Değiştir
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-danger" href="/Account/Logout">
                        <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Randevu Başlığı -->
    <div class="row mb-3">
        <div class="col-12">
            <h3 class="mb-3">
                <i class="fas fa-calendar-day text-primary me-2"></i> Yaklaşan Randevularınız
            </h3>
        </div>
    </div>

    <!-- Randevu Tablosu -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Doktor</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>47</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/img/doctors/doctor1.jpg" alt="Dr. Ahmet Yılmaz" class="rounded-circle me-2" width="30" height="30">
                                            <span>Dr. Ahmet Yılmaz</span>
                                        </div>
                                    </td>
                                    <td>11.06.2025</td>
                                    <td>09:30</td>
                                    <td>
                                        <form method="post" action="/Appointment/CancelAppointment">
                                            <input type="hidden" name="appointmentId" value="47" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times-circle me-1"></i> İptal Et
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <tr>
                                    <td>48</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/img/doctors/doctor1.jpg" alt="Dr. Ahmet Yılmaz" class="rounded-circle me-2" width="30" height="30">
                                            <span>Dr. Ahmet Yılmaz</span>
                                        </div>
                                    </td>
                                    <td>12.06.2025</td>
                                    <td>09:30</td>
                                    <td>
                                        <form method="post" action="/Appointment/CancelAppointment">
                                            <input type="hidden" name="appointmentId" value="48" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times-circle me-1"></i> İptal Et
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <tr>
                                    <td>49</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/img/doctors/doctor1.jpg" alt="Dr. Ahmet Yılmaz" class="rounded-circle me-2" width="30" height="30">
                                            <span>Dr. Ahmet Yılmaz</span>
                                        </div>
                                    </td>
                                    <td>13.06.2025</td>
                                    <td>10:00</td>
                                    <td>
                                        <form method="post" action="/Appointment/CancelAppointment">
                                            <input type="hidden" name="appointmentId" value="49" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times-circle me-1"></i> İptal Et
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Yeni Randevu Butonu -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <a href="/Appointment/Randevu" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-plus me-2"></i> Yeni Randevu Al
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function() {
            // Debugging
            console.log("Sayfa yüklendi");
            console.log("Session PatientId: @patientId");
            console.log("Session PatientName: @patientName");
            
            // Debugging amaçlı AJAX çağrısı
            $.ajax({
                url: '/Appointment/GetDebugInfo',
                type: 'GET',
                success: function(data) {
                    console.log("Debug Bilgisi:", data);
                },
                error: function(err) {
                    console.error("Hata:", err);
                }
            });
        });
    </script>
}