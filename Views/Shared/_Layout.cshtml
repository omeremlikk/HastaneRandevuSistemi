<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hastane Randevu</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hospital text-primary me-2"></i>
                    <span class="fw-bold">Hastane Randevu</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Appointment" asp-action="Doctors">Doktorlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary rounded-pill px-4 text-white ms-2" asp-controller="Appointment" asp-action="Book">
                                <i class="fas fa-calendar-alt me-2"></i>Randevu Al
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pt-5 mt-5">
        @RenderBody()
    </main>

    <footer class="footer bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-4">Hastane Randevu</h5>
                    <p class="text-muted">Sağlık hizmetlerine kolay erişim için modern randevu sistemi.</p>
                    <div class="social-links mt-3">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-4">Hızlı Bağlantılar</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-muted text-decoration-none">Ana Sayfa</a></li>
                        <li class="mb-2"><a href="/Appointment/Doctors" class="text-muted text-decoration-none">Doktorlarımız</a></li>
                        <li class="mb-2"><a href="/Appointment/Book" class="text-muted text-decoration-none">Randevu Al</a></li>
                        <li class="mb-2"><a href="/Home/Privacy" class="text-muted text-decoration-none">Gizlilik</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="fw-bold mb-4">İletişim</h5>
                    <ul class="list-unstyled text-muted">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> Hastane Caddesi No:123</li>
                        <li class="mb-2"><i class="fas fa-phone me-2"></i> (0212) 123 45 67</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@hastanerandevu.com</li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4 bg-secondary">
            <div class="text-center text-muted">
                <small>© @DateTime.Now.Year Hastane Randevu Sistemi - Tüm Hakları Saklıdır</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
