<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MediVita | Sağlık Merkezi</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    
    <!-- AOS Animation Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-transparent">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-heartbeat me-2"></i>
                <span>MediVita</span>
            </a>
            <button class="navbar-toggler shadow-none border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i> Ana Sayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointment" asp-action="Doctors">
                            <i class="fas fa-user-md me-1"></i> Doktorlarımız
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Appointment" asp-action="Schedule">
                            <i class="fas fa-calendar-alt me-1"></i> Randevular
                        </a>
                    </li>
                    
                    <!-- Giriş Yap / Üye Ol Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" 
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-sign-in-alt me-1"></i> Giriş Yap
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="loginDropdown">
                            <li>
                                <a class="dropdown-item" href="/Account/DoctorLogin">
                                    <i class="fas fa-user-md me-2 text-primary"></i> Doktor Girişi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Account/PatientLogin">
                                    <i class="fas fa-user me-2 text-primary"></i> Hasta Girişi
                                </a>
                            </li>
                        </ul>
                    </li>
                    
                    <!-- Üye Ol Butonu -->
                    <li class="nav-item ms-lg-2">
                        <a class="btn btn-light btn-sm" href="/Account/Register">
                            <i class="fas fa-user-plus me-1"></i> Üye Ol
                        </a>
                    </li>
                    
                    <!-- Randevu Al Butonu -->
                    <li class="nav-item ms-lg-2">
                        <a class="btn btn-primary btn-sm" asp-controller="Appointment" asp-action="Book">
                            <i class="fas fa-calendar-check me-1"></i> Randevu Al
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Ana İçerik -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-5">
                    <div class="mb-3">
                        <h4 class="footer-title">MediVita Sağlık Merkezi</h4>
                        <p class="text-white-50">Uzman doktor kadromuz ve modern tıbbi teknolojimizle sağlığınız için en iyi hizmeti sunuyoruz.</p>
                        <div class="social-icons">
                            <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div>
                        <h4 class="footer-title">Hızlı Erişim</h4>
                        <a href="/" class="footer-link">Ana Sayfa</a>
                        <a href="/Appointment/Doctors" class="footer-link">Doktorlarımız</a>
                        <a href="/Appointment/Book" class="footer-link">Randevu Al</a>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div>
                        <h4 class="footer-title">İletişim</h4>
                        <div class="footer-contact">
                            <i class="fas fa-map-marker-alt"></i>
                            <div class="footer-contact-text">
                                Atatürk Caddesi No:123, Şişli / İstanbul
                            </div>
                        </div>
                        <div class="footer-contact">
                            <i class="fas fa-phone-alt"></i>
                            <div class="footer-contact-text">
                                (0212) 123 45 67
                            </div>
                        </div>
                        <div class="footer-contact">
                            <i class="fas fa-envelope"></i>
                            <div class="footer-contact-text">
                                info@medivita.com
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row footer-bottom">
                <div class="col-md-12 text-center">
                    <p class="mb-0 text-white-50">&copy; 2023 MediVita Sağlık Merkezi. Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- AOS Animation Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    
    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Custom Scripts -->
    <script>
        // AOS Animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
        
        // Navbar scroll efekti
        document.addEventListener('DOMContentLoaded', function() {
            const navbar = document.querySelector('.navbar');
            
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    navbar.classList.add('navbar-scrolled');
                    if (navbar.classList.contains('navbar-dark')) {
                        navbar.classList.remove('navbar-dark');
                        navbar.classList.add('navbar-light');
                    }
                } else {
                    navbar.classList.remove('navbar-scrolled');
                    if (navbar.classList.contains('navbar-light')) {
                        navbar.classList.remove('navbar-light');
                        navbar.classList.add('navbar-dark');
                    }
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
