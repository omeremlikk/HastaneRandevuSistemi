@model hastane.Models.DoctorDashboardViewModel
@{
    ViewData["Title"] = "Doktor Paneli";
    Layout = "_DoctorLayout";
    var doctor = ViewBag.Doctor;
    var activeTab = ViewBag.ActiveTab ?? "dashboard"; // Varsayılan olarak dashboard
    
    // AppointmentsViewModel kontrolü
    var appointmentsViewModel = ViewBag.AppointmentsViewModel as hastane.Models.DoctorAppointmentsViewModel;
    var hasAppointmentsData = appointmentsViewModel != null;
}

<!-- Modern Doktor Dashboard -->
<div class="container-fluid mt-5 pt-5" style="min-height: 100vh; margin-bottom: 250px; padding-bottom: 150px;">
    <!-- Başarı ve Hata Mesajları -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    <!-- Doktor Profil Başlığı -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-gradient rounded-3 mb-4" style="background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ed 100%);">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(doctor.ImageUrl))
                            {
                                <img src="@doctor.ImageUrl" alt="Doktor Fotoğrafı" class="rounded-circle shadow-sm" style="width: 80px; height: 80px; object-fit: cover; border: 3px solid white;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center shadow-sm" style="width: 80px; height: 80px; font-size: 2rem; border: 3px solid white;">
                                    <i class="fas fa-user-md"></i>
                                </div>
                            }
                            <div class="ms-3">
                                <h3 class="mb-1 fw-bold text-primary">Dr. @doctor.Name</h3>
                                <p class="mb-0 text-muted">@doctor.Specialty</p>
                            </div>
                        </div>
                        <!-- Profil düzenleme butonu kaldırıldı -->
                    </div>
                </div>
            </div>
            
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-white p-3 shadow-sm rounded-3 border-0">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home me-1"></i> Ana Sayfa</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Doktor Paneli</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Ana Navigasyon -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-pills nav-fill bg-white rounded-3 shadow-sm p-2">
                <li class="nav-item">
                    <a class="nav-link @(activeTab == "dashboard" ? "active" : "") rounded-pill" href="/Doctor/Dashboard?activeTab=dashboard">
                        <i class="fas fa-chart-line me-1"></i> Özet
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link @(activeTab == "today" || activeTab == "upcoming" || activeTab == "past" || activeTab == "cancelled" || activeTab == "completed" ? "active" : "") dropdown-toggle rounded-pill" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                        <i class="fas fa-calendar-week me-1"></i> Tüm Randevular
                    </a>
                    <ul class="dropdown-menu w-100">
                        <li><a class="dropdown-item @(activeTab == "today" ? "bg-light" : "")" href="/Doctor/Dashboard?activeTab=today"><i class="fas fa-calendar-day me-2 text-primary"></i> Bugünkü Randevular</a></li>
                        <li><a class="dropdown-item @(activeTab == "upcoming" ? "bg-light" : "")" href="/Doctor/Dashboard?activeTab=upcoming"><i class="fas fa-calendar-alt me-2 text-success"></i> Yaklaşan Randevular</a></li>
                        <li><a class="dropdown-item @(activeTab == "completed" ? "bg-light" : "")" href="/Doctor/Dashboard?activeTab=completed"><i class="fas fa-check-circle me-2 text-success"></i> Tamamlanan Randevular</a></li>
                        <li><a class="dropdown-item @(activeTab == "past" ? "bg-light" : "")" href="/Doctor/Dashboard?activeTab=past"><i class="fas fa-history me-2 text-secondary"></i> Geçmiş Randevular</a></li>
                        <li><a class="dropdown-item @(activeTab == "cancelled" ? "bg-light" : "")" href="/Doctor/Dashboard?activeTab=cancelled"><i class="fas fa-ban me-2 text-danger"></i> İptal Edilenler</a></li>
                    </ul>
                </li>
                <!-- Profil bilgileri menü öğesi kaldırıldı -->
                <li class="nav-item">
                    <a class="nav-link text-danger rounded-pill" href="/Account/Logout">
                        <i class="fas fa-sign-out-alt me-1"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Dashboard içeriği -->
    @if (activeTab == "dashboard")
    {
        <!-- Özet İstatistikler -->
        <div class="row mb-5">
            <!-- Bugünkü Randevular -->
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 rounded-3 transition-hover" style="transition: all 0.3s ease;">
                    <div class="card-body p-4 text-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-calendar-day fa-2x text-primary"></i>
                        </div>
                        <h3 class="display-4 fw-bold text-primary">@ViewBag.TodayAppointmentsCount</h3>
                        <p class="text-muted mb-0 fs-5">Bugünkü Randevular</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                        <div class="text-center">
                            <a href="/Doctor/Dashboard?activeTab=today" class="btn btn-sm btn-outline-primary rounded-pill">
                                <i class="fas fa-arrow-right me-1"></i> Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Gelecek Randevular -->
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 rounded-3 transition-hover" style="transition: all 0.3s ease;">
                    <div class="card-body p-4 text-center">
                        <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-calendar-alt fa-2x text-success"></i>
                        </div>
                        <h3 class="display-4 fw-bold text-success">@ViewBag.UpcomingAppointmentsCount</h3>
                        <p class="text-muted mb-0 fs-5">Gelecek Randevular</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                        <div class="text-center">
                            <a href="/Doctor/Dashboard?activeTab=upcoming" class="btn btn-sm btn-outline-success rounded-pill">
                                <i class="fas fa-arrow-right me-1"></i> Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tamamlanan Randevular -->
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100 rounded-3 transition-hover" style="transition: all 0.3s ease;">
                    <div class="card-body p-4 text-center">
                        <div class="rounded-circle bg-info bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-check-circle fa-2x text-info"></i>
                        </div>
                        <h3 class="display-4 fw-bold text-info">@(hasAppointmentsData ? appointmentsViewModel.CompletedAppointments.Count : 0)</h3>
                        <p class="text-muted mb-0 fs-5">Tamamlanan Randevular</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                        <div class="text-center">
                            <a href="/Doctor/Dashboard?activeTab=completed" class="btn btn-sm btn-outline-info rounded-pill">
                                <i class="fas fa-arrow-right me-1"></i> Detaylar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bugünkü Randevular -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm rounded-3">
                    <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 text-primary fw-bold"><i class="fas fa-calendar-day me-2"></i> Bugünkü Randevular</h5>
                            <span class="badge bg-primary rounded-pill">@Model.TodayAppointments.Count</span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.TodayAppointments.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="border-0 py-3">Saat</th>
                                            <th class="border-0 py-3">Hasta Adı</th>
                                            <th class="border-0 py-3">Telefon</th>
                                            <th class="border-0 py-3">Durum</th>
                                            <th class="border-0 py-3 text-end">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var appointment in Model.TodayAppointments.OrderBy(a => a.AppointmentDateTime))
                                        {
                                            <tr class="align-middle">
                                                <td class="py-3 fw-bold">@appointment.AppointmentDateTime.ToString("HH:mm")</td>
                                                <td class="py-3">
                                                    <div class="d-flex align-items-center">
                                                        @if (appointment.Patient != null)
                                                        {
                                                            if (!string.IsNullOrEmpty(appointment.Patient.ProfilePhoto))
                                                            {
                                                                <img src="@appointment.Patient.ProfilePhoto" alt="@appointment.Patient.FullName" class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;">
                                                            }
                                                            else
                                                            {
                                                                <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                                    <i class="fas fa-user small"></i>
                                                                </div>
                                                            }
                                                            <div>
                                                                <p class="mb-0 fw-medium">@appointment.Patient.FullName</p>
                                                                <p class="mb-0 text-muted small">@appointment.Patient.IdentityNumber</p>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span>Hasta bilgisi bulunamadı</span>
                                                        }
                                                    </div>
                                                </td>
                                                <td class="py-3">
                                                    @if (appointment.Patient != null)
                                                    {
                                                        <a href="tel:@appointment.Patient.Phone" class="text-decoration-none">
                                                            <i class="fas fa-phone-alt me-1 text-success"></i> @appointment.Patient.Phone
                                                        </a>
                                                    }
                                                </td>
                                                <td class="py-3">
                                                    @if (appointment.IsCompleted)
                                                    {
                                                        <span class="badge bg-success rounded-pill px-3 py-2">Tamamlandı</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning rounded-pill px-3 py-2">Bekliyor</span>
                                                    }
                                                </td>
                                                <td class="py-3 text-end">
                                                    <a href="/Doctor/AppointmentDetails/@appointment.Id" class="btn btn-sm btn-primary rounded-pill">
                                                        <i class="fas fa-eye me-1"></i> Detay
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="p-5">
                                <div class="text-center py-5">
                                    <div class="mb-4">
                                        <i class="fas fa-calendar-day fa-4x text-primary opacity-50"></i>
                                    </div>
                                    <h5 class="fw-bold text-dark">Bugün için randevunuz bulunmamaktadır</h5>
                                    <p class="text-muted">Bugün için planlanmış herhangi bir randevu bulunmuyor.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <!-- Appointments Tab İçerikleri için Randevu Sekmeleri -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="d-flex flex-wrap" style="border-bottom: 1px solid #eee;">
                            <a href="/Doctor/Dashboard?activeTab=today" class="p-3 text-center flex-grow-1 text-decoration-none @(activeTab == "today" ? "bg-light fw-bold border-bottom border-3 border-primary" : "text-muted")">
                                <i class="fas fa-calendar-day me-1"></i> Bugün 
                                <span class="badge bg-primary ms-1">@(hasAppointmentsData ? appointmentsViewModel.TodayAppointments.Count : Model.TodayAppointments.Count)</span>
                            </a>
                            <a href="/Doctor/Dashboard?activeTab=upcoming" class="p-3 text-center flex-grow-1 text-decoration-none @(activeTab == "upcoming" ? "bg-light fw-bold border-bottom border-3 border-success" : "text-muted")">
                                <i class="fas fa-calendar-alt me-1"></i> Yaklaşan 
                                <span class="badge bg-success ms-1">@(hasAppointmentsData ? appointmentsViewModel.UpcomingAppointments.Count : Model.UpcomingAppointments.Count)</span>
                            </a>
                            <a href="/Doctor/Dashboard?activeTab=completed" class="p-3 text-center flex-grow-1 text-decoration-none @(activeTab == "completed" ? "bg-light fw-bold border-bottom border-3 border-success" : "text-muted")">
                                <i class="fas fa-check-circle me-1"></i> Tamamlanan 
                                <span class="badge bg-success ms-1">@(hasAppointmentsData ? appointmentsViewModel.CompletedAppointments.Count : 0)</span>
                            </a>
                            <a href="/Doctor/Dashboard?activeTab=past" class="p-3 text-center flex-grow-1 text-decoration-none @(activeTab == "past" ? "bg-light fw-bold border-bottom border-3 border-secondary" : "text-muted")">
                                <i class="fas fa-history me-1"></i> Geçmiş 
                                <span class="badge bg-secondary ms-1">@(hasAppointmentsData ? appointmentsViewModel.PastAppointments.Count : 0)</span>
                            </a>
                            <a href="/Doctor/Dashboard?activeTab=cancelled" class="p-3 text-center flex-grow-1 text-decoration-none @(activeTab == "cancelled" ? "bg-light fw-bold border-bottom border-3 border-danger" : "text-muted")">
                                <i class="fas fa-ban me-1"></i> İptal Edilenler 
                                <span class="badge bg-danger ms-1">@(hasAppointmentsData ? appointmentsViewModel.CancelledAppointments.Count : 0)</span>
                            </a>
                        </div>
                        
                        <!-- Tab İçerikleri -->
                        <div class="p-4">
                            @if (activeTab == "today")
                            {
                                <h5 class="mb-4 d-flex align-items-center">
                                    <i class="fas fa-calendar-day me-2 text-primary"></i> 
                                    <span>Bugünkü Randevular</span>
                                    <span class="badge bg-primary ms-2">@Model.TodayAppointments.Count</span>
                                </h5>
                                
                                @if (Model.TodayAppointments.Count > 0)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Saat</th>
                                                    <th>Hasta Adı</th>
                                                    <th>Telefon</th>
                                                    <th>Durum</th>
                                                    <th class="text-end">İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var appointment in Model.TodayAppointments.OrderBy(a => a.AppointmentDateTime))
                                                {
                                                    <tr class="align-middle">
                                                        <td>@appointment.AppointmentDateTime.ToString("HH:mm")</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                @if (appointment.Patient != null)
                                                                {
                                                                    if (!string.IsNullOrEmpty(appointment.Patient.ProfilePhoto))
                                                                    {
                                                                        <img src="@appointment.Patient.ProfilePhoto" alt="@appointment.Patient.FullName" class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;">
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                                            <i class="fas fa-user small"></i>
                                                                        </div>
                                                                    }
                                                                    <div>
                                                                        <p class="mb-0 fw-medium">@appointment.Patient.FullName</p>
                                                                        <p class="mb-0 text-muted small">@appointment.Patient.IdentityNumber</p>
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <span>Hasta bilgisi bulunamadı</span>
                                                                }
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @if (appointment.Patient != null)
                                                            {
                                                                <a href="tel:@appointment.Patient.Phone" class="text-decoration-none">
                                                                    <i class="fas fa-phone-alt me-1 text-success"></i> @appointment.Patient.Phone
                                                                </a>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (appointment.IsCompleted)
                                                            {
                                                                <span class="badge bg-success rounded-pill px-3 py-2">Tamamlandı</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-warning rounded-pill px-3 py-2">Bekliyor</span>
                                                            }
                                                        </td>
                                                        <td class="text-end">
                                                            <a href="/Doctor/AppointmentDetails/@appointment.Id" class="btn btn-sm btn-primary rounded-pill">
                                                                <i class="fas fa-eye me-1"></i> Detay
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <div class="text-center py-4">
                                            <i class="fas fa-calendar-day fa-4x mb-3 text-primary"></i>
                                            <h5>Bugün için randevunuz bulunmamaktadır</h5>
                                        </div>
                                    </div>
                                }
                            }
                            
                            @if (activeTab == "upcoming")
                            {
                                <h5 class="mb-4 d-flex align-items-center">
                                    <i class="fas fa-calendar-alt me-2 text-success"></i> 
                                    <span>Yaklaşan Randevular</span>
                                    <span class="badge bg-success ms-2">@Model.UpcomingAppointments.Count</span>
                                </h5>
                                
                                @if (Model.UpcomingAppointments.Count > 0)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Tarih</th>
                                                    <th>Saat</th>
                                                    <th>Hasta Adı</th>
                                                    <th>Telefon</th>
                                                    <th class="text-end">İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var appointment in Model.UpcomingAppointments.OrderBy(a => a.AppointmentDateTime))
                                                {
                                                    <tr class="align-middle">
                                                        <td>@appointment.AppointmentDateTime.ToString("dd.MM.yyyy")</td>
                                                        <td>@appointment.AppointmentDateTime.ToString("HH:mm")</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                @if (appointment.Patient != null)
                                                                {
                                                                    if (!string.IsNullOrEmpty(appointment.Patient.ProfilePhoto))
                                                                    {
                                                                        <img src="@appointment.Patient.ProfilePhoto" alt="@appointment.Patient.FullName" class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;">
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                                            <i class="fas fa-user small"></i>
                                                                        </div>
                                                                    }
                                                                    <div>
                                                                        <p class="mb-0 fw-medium">@appointment.Patient.FullName</p>
                                                                        <p class="mb-0 text-muted small">@appointment.Patient.IdentityNumber</p>
                                                                    </div>
                                                                }
                                                                else
                                                                {
                                                                    <span>Hasta bilgisi bulunamadı</span>
                                                                }
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @if (appointment.Patient != null)
                                                            {
                                                                <a href="tel:@appointment.Patient.Phone" class="text-decoration-none">
                                                                    <i class="fas fa-phone-alt me-1 text-success"></i> @appointment.Patient.Phone
                                                                </a>
                                                            }
                                                        </td>
                                                        <td class="text-end">
                                                            <a href="/Doctor/AppointmentDetails/@appointment.Id" class="btn btn-sm btn-primary rounded-pill">
                                                                <i class="fas fa-eye me-1"></i> Detay
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <div class="text-center py-4">
                                            <i class="fas fa-calendar-alt fa-4x mb-3 text-primary"></i>
                                            <h5>Yaklaşan randevunuz bulunmamaktadır</h5>
                                        </div>
                                    </div>
                                }
                            }
                            
                            @if (activeTab == "completed")
                            {
                                <h5 class="mb-4 d-flex align-items-center">
                                    <i class="fas fa-check-circle me-2 text-success"></i> 
                                    <span>Tamamlanan Randevular</span>
                                    <span class="badge bg-success ms-2">@(hasAppointmentsData ? appointmentsViewModel.CompletedAppointments.Count : 0)</span>
                                </h5>
                                
                                @if (hasAppointmentsData && appointmentsViewModel.CompletedAppointments.Count > 0)
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Tarih</th>
                                                    <th>Saat</th>
                                                    <th>Hasta Adı</th>
                                                    <th>Notlar</th>
                                                    <th class="text-end">İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var appointment in appointmentsViewModel.CompletedAppointments.OrderByDescending(a => a.AppointmentDateTime))
                                                {
                                                    <tr class="align-middle">
                                                        <td>@appointment.AppointmentDateTime.ToString("dd.MM.yyyy")</td>
                                                        <td>@appointment.AppointmentDateTime.ToString("HH:mm")</td>
                                                        <td>
                                                            <div class="d-flex align-items-center">
                                                                @if (appointment.Patient != null)
                                                                {
                                                                    if (!string.IsNullOrEmpty(appointment.Patient.ProfilePhoto))
                                                                    {
                                                                        <img src="@appointment.Patient.ProfilePhoto" alt="@appointment.Patient.FullName" class="rounded-circle me-2" width="36" height="36" style="object-fit: cover;">
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                                            <i class="fas fa-user small"></i>
                                                                        </div>
